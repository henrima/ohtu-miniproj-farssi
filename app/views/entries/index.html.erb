<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Key</th>  
    </tr>
  </thead>



  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= link_to entry.category, entry %></td>
        <% field = Field.where(:entry_id => entry.id, :name => 'key').take %>
        <td><%= field.content %></td>
      </tr>     
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
